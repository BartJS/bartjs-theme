<!DOCTYPE html>
<html>
<head>
  {{> meta}}
</head>
<body class="{{body_class}}">

    <header class="header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
      <h1 class="header__logo">
        <a class="blog-logo" href="{{@blog.url}}">
          {{#if @blog.logo}}
            <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
          {{else}}
            <img src="{{asset "/img/logo.svg"}}" alt="BartJS">
          {{/if}}
        </a>
      </h1>
      {{navigation}}

      <div class="header__subHeader">
        <div class="header__subHeader__wrapper">
          <h2 class="header__subHeader__title">BartJS</h2>
          <p class="header__subHeader__tagline">En meetup. En Podcast. Et community</p>

          <a href="/rss/" class="header__subHeader__rssButton">RSS</a>
        </div>
      </div>
    </header>

    {{! Everything else gets inserted here }}
    {{{body}}}

    {{> footer}}

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! The main JavaScript file for Casper }}
    <script type="text/javascript">
      hljs.initHighlightingOnLoad();
    </script>
</body>
</html>
